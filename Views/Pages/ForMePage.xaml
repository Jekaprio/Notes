<Page
    x:Class="Notes.Views.Pages.ForMePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Notes.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Notes.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ForMePage"
    d:DataContext="{d:DesignInstance local:ForMePage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <RichTextBox Width="Auto" Height="Auto" HorizontalAlignment="Left" FontSize="25" Foreground="IndianRed"/>
        </StackPanel>
    </Grid>
</Page>
